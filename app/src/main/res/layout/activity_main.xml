        android:onClick="numberEvent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button0"
        android:background="@drawable/roundedbutton1"
        app:backgroundTint="@null"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="59dp"
        android:backgroundTint="@color/off_white"
        android:elevation="10dp"
        android:fontFamily="@font/montserratbold"
        android:stateListAnimator="@null"
        android:text="0"
        android:onClick="numberEvent"
        android:textColor="#3A4E89"
        android:textSize="28sp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/blue"
        android:layout_marginStart="309dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="443dp"
        android:text="÷"
        android:onClick = "operatorEvent"
        android:textSize="43sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonMulti"
        style="@style/blue"
        android:layout_marginStart="309dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="344dp"
        android:onClick="operatorEvent"
        android:text="X"
        android:textSize="29sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/buttonMinus"
        style="@style/blue"
        android:layout_marginStart="309dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="251dp"
        android:text="-"
        android:onClick = "operatorEvent"
        android:textSize="45sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMulti" />

    <Button
        android:id="@+id/buttonComma"
        style="@style/white"
        android:layout_marginStart="215dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="60dp"
        android:text=","
        android:onClick="numberEvent"
        android:textSize="28sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonEquals"
        style="@style/blue"
        android:layout_marginStart="309dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="59dp"
        android:onClick="equalsEvent"
        android:text="="
        android:textSize="29sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonPlus"
        style="@style/blue"
        android:layout_marginBottom="155dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="309dp"
        android:layout_marginEnd="22dp"
        android:text="+"
        android:onClick = "operatorEvent"
        android:textSize="29sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="24dp"
        android:text ="0"
        android:fontFamily="@font/digitalnumbers_regular"
        android:gravity="center_vertical"
        android:textColor="#373A37"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
